# Rclone configuration template
# Copy this file to {{ datasience_home }}/.config/rclone/rclone.conf and configure your remote

# Example: AWS S3
# [s3]
# type = s3
# provider = AWS
# env_auth = false
# access_key_id = YOUR_ACCESS_KEY
# secret_access_key = YOUR_SECRET_KEY
# region = us-east-1

# Example: Google Drive
# [gdrive]
# type = drive
# scope = drive
# token = YOUR_TOKEN

# Example: Azure Blob Storage
# [azure]
# type = azureblob
# account = YOUR_ACCOUNT
# key = YOUR_KEY

# For more providers and configuration options, visit: https://rclone.org/
